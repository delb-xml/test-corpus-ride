<!-- alter Tab Personnel -->
<xf:case id="case_personnel">
    <xf:label>Personnel</xf:label>
    <div class="caseContent">
        <xf:group appearance="full">
            <xf:label>Personnel</xf:label>
            <br/>
            <br/>
            <span>Please indicate the involved personnel by <strong>name</strong> (forename surname) and their respective <strong>roles</strong>.</span>
            <br/>
            <br/>
            <span>Choose 'Contributor' if no other role is applicable.</span>
            <br/>
            <xf:trigger src="icons/plus.png" class="add">
                <xf:insert nodeset="//tei:notesStmt//tei:respStmt" at="last()"/>
            </xf:trigger> Add a new entry
            <xf:repeat id="resp_repeat" nodeset="//tei:notesStmt//tei:respStmt" appearance="full">
                <xf:select1 class="personnel_select" ref="tei:resp" appearance="minimal">
                    <xf:item>
                        <xf:label>Editor</xf:label>
                        <xf:value>Editor</xf:value>
                    </xf:item>
                    <xf:item>
                        <xf:label>Encoder</xf:label>
                        <xf:value>Encoder</xf:value>
                    </xf:item>
                    <xf:item>
                        <xf:label>Programmer</xf:label>
                        <xf:value>Programmer</xf:value>
                    </xf:item>
                    <xf:item>
                        <xf:label>Advisor</xf:label>
                        <xf:value>Advisor</xf:value>
                    </xf:item>
                    <xf:item>
                        <xf:label>Designer</xf:label>
                        <xf:value>Designer</xf:value>
                    </xf:item>
                    <xf:item>
                        <xf:label>Contributor</xf:label>
                        <xf:value>Contributor</xf:value>
                    </xf:item>
                </xf:select1>
                <xf:input ref="tei:persName/tei:name"/>
                <xf:trigger src="icons/remove.png" class="remove">
                    <xf:delete nodeset="//tei:notesStmt//tei:respStmt[index('resp_repeat')]" if="count(//tei:notesStmt//tei:respStmt) gt 1"/>
                </xf:trigger>
            </xf:repeat>
        </xf:group>
    </div>
</xf:case>

